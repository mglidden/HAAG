<h1>Listing messages</h1>

<table class='index'>
  <tr>
    <th>Content</th>
    <th>User</th>
    <th>Assignment</th>
    <th></th>
  </tr>

<% @messages.each do |message| %>
  <tr>
    <td><%= message.content %></td>
    <td><%= message.recipient.name %></td>
    <td><%= message.assignment.description %></td>
    <td><%= link_to 'Show', message %></td>
  </tr>
<% end %>
</table>

