
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
  <html>
    <head>
      <title><%= h(yield(:title) || "Untitled") %></title>


<%= stylesheet_link_tag "/jqtouch/themes/apple/theme.css" %>
<%= javascript_include_tag "/jqtouch/jqtouch/jquery.1.3.2.min.js" %>
<%= javascript_include_tag "/jqtouch/jqtouch/jqtouch.min.js" %>
<%= javascript_include_tag "/jqtouch/jqtouch/jqtouch.transitions.js" %>
      
      <%= javascript_include_tag "mobile" %>

      <%= yield(:head) %>
    </head>
    <body>
      <div class="current" id = 'login'>
        <%- if 'show_title?' -%>
        <div class="toolbar">
          <%= link_to "Back", nil, :class => "back" unless (current_page?(root_path) || current_page?(new_user_session_path)) %>
          <%= link_to "Sign out", sign_out_path, :class => "back", :rel => "external" if current_page?(root_path) %>
          <h1><%=h yield(:title) %></h1>
          <%= link_to "Full Site", root_url(:mobile => 0), :class => "button", :rel => "external" %>
          <%= yield(:toolbar) %>
        </div>
        <%- end -%>

        <% unless flash.empty? %>
          <div class="info">
          <%- flash.each do |name, msg| -%>
            <%= content_tag :div, msg, :id => "flash_#{name}" %>
          <%- end -%>
          </div>
        <% end %>

        <%= yield %>
      </div>
    </body>
  </html>