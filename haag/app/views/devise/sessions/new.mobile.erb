<% title 'Sign in to Haag' %>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'scroll'}) do |f| %>
  
  <ul>
    <li><%= f.text_field :email, :placeholder => 'Email' %></li>  
    <li><%= f.password_field :password , :placeholder => 'Password'%></li>  
    <% if devise_mapping.rememberable? -%>
      <li><%= f.check_box :remember_me %>&nbsp;Remember me</li>
    <% end -%>
  </ul>

  <%= link_to "Submit", nil, :class => "whiteButton submit" %>
    
<% end %>

<% render "links" %>
