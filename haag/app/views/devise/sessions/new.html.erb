<div class=box>
  <h2>Sign in to Haag!</h2>
  <br />

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div><%= f.label :email %>
    <%= f.email_field :email %></div>

    <div><%= f.label :password %>
    <%= f.password_field :password %></div>

    <% if devise_mapping.rememberable? -%>
      <div><%= f.label :remember_me, :style => 'display:inline'%> <%= f.check_box :remember_me %> </div>
    <% end -%>

    <div><%= f.submit "Sign in", :class => 'btn btn-inverse' %></div>
  <% end %>

  <%= render "links" %>
</div>
