<%= render 'form' %>

<%= javascript_tag do %>
  
  $(document).ready(function() {
  
          $("#course_short_name").keyup(function() {
                  delay(function() {
                          var name = $("#course_short_name").val();
                          validate_field('short_name', name, $("#course_short_name") );
                  }, 600);
          });
          
          $("#course_long_name").keyup(function() {
                  delay(function() {
                          var email = $("#course_long_name").val();
                          validate_field('long_name', email, $("#course_long_name") );
                  }, 600);
          });
          
  });
  
 $(document).ajaxSend(function(event, request, settings) {
  if (typeof(AUTH_TOKEN) == "undefined") return;
  // settings.data is a serialized string like "foo=bar&baz=boink" (or null)
  settings.data = settings.data || "";
  settings.data += (settings.data ? "&" : "") + "authenticity_token=" + encodeURIComponent(AUTH_TOKEN);
  }); 

<% end %>
