<div id=course-lst>
  <div id=course-lst-header>
    <span id=course-lst-label>
      Courses
    </span>
  </div>
  <div id=course-lst-body>
    <ul>
    <% current_user.courses.each do |course| %>
      <li class='course-lst-itm' style='background-color:<%= course.color %>' color=<%= course.color %> href='/assignments/new?default_course=<%= course.id %>'><%= course.name %></li>
    <% end %>
    </ul>
    <hr/>
    <%= link_to 'Create a new class', new_course_path, :class => 'popup' %>
    <br/>
    <%= link_to 'Subscribe to an existing class', new_user_subscription_path(current_user), :class => 'popup' %>
    <br/>
    <%= link_to 'Create an assignment', new_assignment_path, :class => 'popup' %>
    <br/>
    <hr/>
    <%= render :partial => 'shared/messages', :locals => { :user => current_user } %>
  </div>
</div>

