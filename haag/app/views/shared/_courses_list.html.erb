<div id=course-lst>
  <div id=course-lst-header>
    <span id=course-lst-label>
      Courses
    </span>
  </div>
  <div id=course-lst-body>
    <% @courses.each do |course| %>
      <%= course.long_name %>
      <br>
    <% end %>
	  <%= link_to 'Add class', new_course_path, :id => 'new-course-link', :class => 'popup' %>
	  <a href="/connection_types/new/" class="popup">Add Connection Type</a>

  </div>
</div>

<div id='dialog-div'>
</div>

<%= javascript_tag do %>


$('a.popup').click(function() {
	$('<div />').appendTo('body').load($(this).attr('href') + ' form').dialog({
		title: $(this).text()
	});
	return false;
});

<% end %>
