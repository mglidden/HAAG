<div style='border-bottom: 1px solid #ccc; margin-top: 4px; margin-bottom:24px;'>
  <table>
    <tr>
      <td><%= f.label :description %></td>
      <td><%= f.text_field :description %></td>
      <% if @include_delete %>
        <td><%= f.link_to_remove( image_tag("icon_remove.png", :class => 'icon-remove', :title => 'Delete this assignment'), :class => 'link-remove' )%></td>
      <% end %>
    </tr>
    <tr>
      <td><%= f.label :course %></td>
      <td><%= f.collection_select(:course_id, @courses, :id, :name) %></td>
    </tr>
    <tr>
      <td><%= f.label :due_at %></td>
      <td>
        <%= f.text_field :due_at, :class => 'datepicker-no-validation', :value => @default_date %>
      </td>
    </tr>
    <tr>
      <td></td>
      <td style='text-align:left;'><%= f.check_box :shared, :value => '1' %>&nbsp;<%= f.label :shared, :style => 'display:inline;' %></td>
    </tr>    
  </table>
</div>

<%= javascript_tag do %>
  $('.datepicker-no-validation').datepicker();
<% end %>
