<div>
  <table>
    <tr>
      <td><%= f.label :description %></td>
      <td><%= f.text_field :description %></td>
      <% if @include_delete %>
        <td><%= f.link_to_remove( image_tag("icon_remove.png", :class => 'icon-remove', :title => 'Delete this assignment'), :class => 'link-remove' )%></td>
      <% end %>
    </tr>
    <tr>
      <td><%= f.label :course %></td>
      <td><%= f.collection_select(:course_id, @courses, :id, :name) %></td>
    </tr>
    <tr>
      <td><%= f.label :due_at %></td>
      <td>
        <%= f.text_field :due_at, :class => 'datepicker-no-validation' %>
      </td>
    </tr>
  </table>
</div>

<%= javascript_tag do %>
  $('.datepicker-no-validation').datepicker();
<% end %>
