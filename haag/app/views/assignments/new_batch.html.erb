
<%= form_tag( create_batch_assignments_path, :method => :post ) do %>
  
  <%= render 'batch_item', :index => 0, :default_date => Date.today %>
  <%= render 'batch_item', :index => 1, :default_date => Date.today %>
    
  <%= submit_tag 'Save assignments' %>

<% end %>

<%= script_for_live_validation %>

  
<%= javascript_tag do %>

  $('.datepicker').datepicker(
    { onSelect: function(dateText, inst) { 
        validateField(
          'due_at', 
          $(this).val(),
          $(this)
        ) 
      }   
    }
  );

<% end %>

