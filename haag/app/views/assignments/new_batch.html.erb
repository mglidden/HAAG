
<%= form_tag( create_batch_assignments_path, :method => :post ) do %>
  
  <%= render :partial => 'batch_item', :locals => { :index => 0 } %>
  <%= render :partial => 'batch_item', :locals => { :index => 1 } %>
    
  <%= submit_tag 'Save assignments' %>

<% end %>

<%= script_for_live_validation %>

  
<%= javascript_tag do %>

  $('.datepicker').datepicker(
    { onSelect: function(dateText, inst) { 
        validateField(
          'due_at', 
          $(this).val(),
          $(this)
        ) 
      }   
    }
  );

<% end %>

